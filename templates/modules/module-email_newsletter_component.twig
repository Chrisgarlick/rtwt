<div class="m__newsletter {{ content.padding ? content.top_padding ~ ' ' ~  content.bottom_padding }}">
    <div class="container mx-auto px-4">
        <div class="m__newsletter__wrap">
            <div class="m__newsletter__wrap--header">
                <h3>{{ content.title }}</h3>
            </div>
            <div class="m__newsletter__wrap--copy">
                <p>{{ content.copy }}</p>
            </div>
            <div class="m__newsletter__wrap--form">
                {{ function('do_shortcode', content.form_shortcode ) }}
            </div>
        </div>
    </div>
</div>